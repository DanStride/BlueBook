                     MinWidth="200" 
                     Text="{Binding NewWordIPAString}"/>
            <Button Content="Add"
                    x:Name="addButton" 
                    Width="50"
                    Command="{Binding AddWordCommand}"/>
            <TextBox x:Name="ipaCharsTextBox"
